@page "/"
@inject BrokerApiClient BrokerApi

<PageTitle>Dashboard - CloudSOA</PageTitle>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="stat-value text-primary">@activeSessions</div>
                <div class="stat-label">Active Sessions</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="stat-value text-success">@runningServices</div>
                <div class="stat-label">Running Services</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="stat-value text-info">@totalPods</div>
                <div class="stat-label">Total Pods</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="stat-value text-warning">@requestThroughput/s</div>
                <div class="stat-label">Request Throughput</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <strong>Recent Sessions</strong>
                <a href="/sessions" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Session ID</th>
                            <th>Service</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Requests</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (recentSessions.Any())
                        {
                            @foreach (var session in recentSessions)
                            {
                                <tr>
                                    <td><code>@session.Id[..Math.Min(8, session.Id.Length)]</code></td>
                                    <td>@session.ServiceName</td>
                                    <td><span class="badge @GetStatusBadge(session.Status)">@session.Status</span></td>
                                    <td>@session.CreatedAt.ToString("g")</td>
                                    <td>@session.RequestCount</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="5" class="text-center text-muted py-3">No sessions found</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header"><strong>System Health</strong></div>
            <div class="card-body">
                <div class="mb-3">
                    <span class="health-dot @GetHealthClass(brokerHealth)"></span>
                    <strong>Broker</strong>
                    <span class="text-muted ms-2">@brokerHealth</span>
                </div>
                <div class="mb-3">
                    <span class="health-dot @GetHealthClass(serviceManagerHealth)"></span>
                    <strong>Service Manager</strong>
                    <span class="text-muted ms-2">@serviceManagerHealth</span>
                </div>
                <div class="mb-3">
                    <span class="health-dot @GetHealthClass(redisHealth)"></span>
                    <strong>Redis</strong>
                    <span class="text-muted ms-2">@redisHealth</span>
                </div>
                <div>
                    <span class="health-dot @GetHealthClass(kubernetesHealth)"></span>
                    <strong>Kubernetes</strong>
                    <span class="text-muted ms-2">@kubernetesHealth</span>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int activeSessions;
    private int runningServices;
    private int totalPods;
    private int requestThroughput;
    private List<SessionSummary> recentSessions = new();
    private string brokerHealth = "Unknown";
    private string serviceManagerHealth = "Unknown";
    private string redisHealth = "Unknown";
    private string kubernetesHealth = "Unknown";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var sessions = await BrokerApi.GetSessionsAsync();
            recentSessions = sessions.OrderByDescending(s => s.CreatedAt).Take(10).ToList();
            activeSessions = sessions.Count(s => s.Status == "Running" || s.Status == "Active");

            var metrics = await BrokerApi.GetMetricsAsync();
            runningServices = metrics.RunningServices;
            totalPods = metrics.TotalPods;
            requestThroughput = metrics.RequestThroughput;

            brokerHealth = metrics.BrokerHealthy ? "Healthy" : "Unhealthy";
            serviceManagerHealth = metrics.ServiceManagerHealthy ? "Healthy" : "Unhealthy";
            redisHealth = metrics.RedisHealthy ? "Healthy" : "Unhealthy";
            kubernetesHealth = metrics.KubernetesHealthy ? "Healthy" : "Unhealthy";
        }
        catch
        {
            // API unavailable â€” show defaults
        }
    }

    private string GetStatusBadge(string status) => status switch
    {
        "Running" or "Active" => "badge-running",
        "Pending" => "badge-pending",
        "Failed" or "Faulted" => "badge-failed",
        _ => "badge-stopped"
    };

    private string GetHealthClass(string health) => health switch
    {
        "Healthy" => "healthy",
        "Degraded" => "degraded",
        _ => "unhealthy"
    };
}
